extends layout

block prepend title
  | Talk: #{ page.title + " - "}

block header
  h1= page.title
  h3 Presented: !{ moment.utc(page.date).format('DD. MMMM YYYY') }
  ul
    if page.metadata.url
      li URL: 
        a(href=page.metadata.url)= page.metadata.url
    li Repository: 
      a(href=page.metadata.repository)= page.metadata.repository


block content
  article.block-content
    section.content!= typogr(page.html).typogrify()
  nav
    ul
      li
        a(href=contents.talks.index.url) Â« All talks

block aside
  - var tags = env.helpers.getTagsFromArticle(page)
  include tagList
