doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='/css/style.medium.css', media='all and (min-width: 30em)')
      link(rel='stylesheet', href='/css/style.large.css', media='all and (min-width: 50em)')
      link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Archivo+Narrow")
  body(class=bodyclass)
    .block-container.layout-container
      header(role="banner").page-header
        hgroup
          block header
            h1
              a(href=locals.url)= locals.name
            h3.site-description= locals.description
        nav(role="navigation")
          ul
            li
              a(href=locals.url) Home
                .triangle
            li
              a(href="http://cv.icanhasweb.net") CV
                .triangle
            li
              a(href="https://github.com/megoth") Github
                .triangle
      main(role="main")
        block content
      aside
        block aside
      footer
        !=contents['about.md'].html