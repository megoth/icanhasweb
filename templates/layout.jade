doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='/css/style.medium.css', media='all and (min-width: 30em)')
      link(rel='stylesheet', href='/css/style.large.css', media='all and (min-width: 50em)')
  body
    .block-container.layout-container
      header(role="banner").page-header
        hgroup
          block header
            h1
              a(href=locals.url)
                span.first I CAN 
                span.second HAS WEB
            h3.site-description= locals.description
        block nav
      main(role="main")
        block content
          h2 Welcome to zombocom!
      aside
        block aside
          div Even more info!
      footer
        a(rel="license", href="http://creativecommons.org/licenses/by/3.0/")
          img(alt="Creative Commons License", src="http://i.creativecommons.org/l/by/3.0/88x31.png")
        br
        | This work is licensed under a 
        a(rel="license", href="http://creativecommons.org/licenses/by/3.0/") Creative Commons Attribution 3.0 
        | .