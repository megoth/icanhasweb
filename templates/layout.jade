doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      if page && page.metadata.description
        meta(name='description', content=page.metadata.description)
      if page && page.metadata.tags
        meta(name='keywords', content=page.metadata.tags)
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='/css/style.medium.css', media='all and (min-width: 33em)')
      link(rel='stylesheet', href='/css/style.large.css', media='all and (min-width: 51em)')
      link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Archivo+Narrow")
  body(class=bodyclass)
    .layout-container
      .block-container.layout-content
        header(role="banner").page-header
          hgroup
            block header
              h1
                a(href=locals.url)= locals.name
              h3= locals.description
          nav(role="navigation")
            ul
              li
                a(href=locals.url) Home
                  .triangle
              li
                a(href='/archive.html') Posts
                  .triangle
              li
                a(href="/projects") Code
                  .triangle
              li
                a(href="/talks") Talks
                  .triangle
        main(role="main")
          block content
            != page.html
        aside
          block aside
      footer
        .block-container
          != contents['about.md'].html
        #cookies
          .block-container This website makes use of <a href="/cookies">cookies</a>. By continue to use this website you accept this. 
