extends layout

block vars
  - var bodyclass = 'index'

block header
  h1
    a(href=locals.url)
      span.first I Can&nbsp;
      span.second Has Web
  h3.site-description= locals.description

block content
  include articleList

block aside
  article.block-content
    h3 About
    p
      a(href=locals.url) icanhasweb.net
      |  is the online home of Arne Hassel
      |, a web developer living and working in Oslo, Norway.
  article.block-content
    h3 Photo
    .block-photo
      img(src=locals.url+"/img/uio200_200px.jpg", alt="A photo of me")
  article.block-content
    h3 Profiles
    p My public profiles on the web.
    ul
      li
        a(href="https://github.com/megoth") github
      li
        a(href="https://linkedin.com/in/arnehassel") linkedin
      li
        a(href="https://twitter.com/megoth") twitter
  article.block-content
    h3 Content
    p Content on this site.
    ul
      li
        a(href="/cv") Curriculum Vitae
      li
        a(href="https://graphitethesis.icanhasweb.net/") Master thesis
      li
        a(href="https://sketches.icanhasweb.net/") Sketches
      li
        a(href="https://vis.icanhasweb.net/") Visualizations
