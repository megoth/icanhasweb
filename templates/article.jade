extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)
    |, !{ moment.utc(page.date).format('DD. MMMM YYYY') } 
    if (page.metadata.original)
      | (
      a(href=page.metadata.original) Original blog
      |)

block content
  article.block-content
    section.content!= typogr(page.html).typogrify()
  nav
    ul
      li
        a(href=contents.index.url) Â« Full blog

block aside
  - var tags = env.helpers.getTagsFromArticle(page)
  include tagList
